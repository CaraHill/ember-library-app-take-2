<h1> Contact Us </h1>

<br/><br/>

<div class="form-horizontal form-group form-group-lg row">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
      {{input type="email" value=email class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
    </div>
    <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-3">
      <button class="btn btn-primary btn-lg btn-block" {{action 'saveMessage'}} disabled={{isDisabled}}>Send message</button>
    </div>
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2 message-box">
      {{textarea class="form-control" placeholder="Your message." rows=15 value=message autofocus="autofocus"}}
    </div>
  </div>
 </div>

 {{#if responseMessage}}
   <div class="alert alert-success">{{responseMessage}}</div>
 {{/if}}

 <br/><br/>
